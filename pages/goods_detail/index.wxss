/* pages/goods_detail/index.wxss */
.swiper-wrap .swiper-content {
  text-align: center;
  height: 60vw;
}
.swiper-wrap .swiper-content image {
  width: 60%;
}
.goods-desc {
  padding: 0 10rpx ;
}
.goods-desc .goods-price {
  font-size: 30prx;
  color: var(--themeColor);
  margin-bottom: 10rpx;
}
.goods-desc .goods-name {
  display: flex;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  padding: 10rpx 15rpx;
}
.goods-desc .goods-name .name {
  flex: 5;
  color: #666;
  font-size: 28rpx;
  border-right: 4rpx solid #555;
}
.goods-desc .goods-name .collection {
  flex: 1;
  text-align: center;
}
.goods-desc .goods-name .collection .collect {
  font-size: 28rpx;
  color: #666;
}
.goods-detail {
  margin-top: 20rpx;
  margin-bottom: 80rpx;
}
.goods-detail .detail-title {
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: bolder;
  color: var(--themeColor);
}
.goods-detail .detail-content {
  border-top: 2rpx solid #ccc;
}
.utils-wrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
}
.utils-wrap .utils {
  display: flex;
  text-align: center;
}
.utils-wrap .utils .utils-left {
  display: flex;
  flex: 4;
  justify-content: space-around;
  height: 100rpx;
}
.utils-wrap .utils .utils-left .contact .contact-kefu {
  font-size: 24rpx;
}
.utils-wrap .utils .utils-left .share .contact-share {
  font-size: 24rpx;
}
.utils-wrap .utils .utils-left .cart .contact-cart {
  font-size: 24rpx;
}
.utils-wrap .utils .utils-right {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
.utils-wrap .utils .utils-right .addCart {
  flex: 1;
  height: 100%;
  background: #ffa500;
  line-height: 100rpx ;
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
}
.utils-wrap .utils .utils-right .buy {
  flex: 1;
  height: 100%;
  background: var(--themeColor);
  line-height: 100rpx ;
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
}
